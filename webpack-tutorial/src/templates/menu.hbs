{{#each this}}
    <li class="menu__item">
        <article class="card">
            <img src={{this}}
                alt={{this}} class="card__image" />
            <div class="card__content">
                <h2 class="card__name">{{this}}</h2>
                <p class="card__price">
                    <i class="material-icons"> {{this}} </i>
                    {{this}}
                </p>
    
                <p class="card__descr">
                    {{this}}
                </p>
    
                <ul class="tag-list">
                    <li class="tag-list__item">{{this}}</li>
                    <li class="tag-list__item">{{this}}</li>
                    <li class="tag-list__item">{{this}}</li>
                    <li class="tag-list__item">{{this}}</li>
                    <li class="tag-list__item">{{this}}</li>
                    <li class="tag-list__item">{{this}}</li>
                </ul>
            </div>
    
            <button class="card__button button">
                <i class="material-icons button__icon"> shopping_cart </i>
                В корзину
            </button>
        </article>
    </li>
{{/each}}